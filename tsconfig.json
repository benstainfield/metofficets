{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "allowJs": false,
    "outDir": "dist",
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src/**/*.ts", "__tests__/**/*.spec.ts"],
 
}
